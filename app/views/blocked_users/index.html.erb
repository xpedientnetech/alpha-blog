<div align="center">
  <div>
    <%= link_to gravatar_for(@user), user_path(@user) %>
  </div>
  <p id="notice"><%= notice %></p>

  <h1>Listing <%= current_user.username %>'s Blocked Users</h1>
  
  <table>
    <thead>
      <tr>
        <th>Blocked Users</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @blocked_users.each do |blocked_user| %>
        <tr>
  
          <td><%= blocked_user.blocked_username %></td>
          <td><%= link_to 'Unblock', blocked_user, method: :delete, data: { confirm: "Are you sure you want to unblock #{blocked_user.blocked_username}?" }, class: "btn btn-xs btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

