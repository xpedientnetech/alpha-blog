
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
        <p><stong>Comments:</stong></p>
      </div>
      <% obj.each do |article| %>
        <div class="article-body">
          <%= comment.comment %>
          <div class="article-meta-details">
            <small>Created by: <%= comment.user.username if comment.user %>
                  <%= time_ago_in_words(comment.created_at) %> ago,
                  last updated: <%= time_ago_in_words(article.updated_at)%> ago</small>
          </div>
        </div>
      <% if logged_in? && (current_user == comment.user || current_user.admin?) %>
      <div class="article-actions">
        <%= link_to "Edit this Comment", edit_comment_path(comment), class: "btn btn-xs btn-primary" %>
        <%= link_to"Delete this Comment", commnet_path(commnet), method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
<% end %>