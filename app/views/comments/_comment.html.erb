<div class="comment container well col-xs-12">
  <i><%=h comment.username %>:</i><br />
  <p><%=h comment.body %></p>
  <div class="article-meta-details">
    <small>Created by: <%= comment.user.username if comment.user %>
          <%= time_ago_in_words(comment.created_at) %> ago</small>
  </div>
  <% if logged_in? && (current_user == comment.user || current_user.admin?) %>
    <div class="article-actions">
      <%= link_to "Edit this Comment", edit_article_comment_path(@article, comment), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this Comment", article_comment_path(@article, comment), 
                method: :delete, data: {confirm: "Are you sure you want to delete the comment?"}, 
                class: "btn btn-xs btn-danger" %>
    </div>
  <% end %>
</div>
