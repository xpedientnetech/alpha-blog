<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Body</th>
      <th>Article</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.username %></td>
        <td><%= comment.body %></td>
        <td><%= comment.article.title %></td>
        <td><%= comment.user.username %></td>
        <td><%= link_to 'Show', article_path(comment.article_id) %></td>
        <td><%# link_to 'Edit', edit_article_comment_path(@comment) %></td>
        <td><%# link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

