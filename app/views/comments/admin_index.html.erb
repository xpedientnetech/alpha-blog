<p id="notice"><%= notice %></p>

<h1 align="center">Welcome to the Admin Comments Index page</h1>

<h4 align="center">All comments</h4>
<div align="center">
  <%= will_paginate %>
</div>
<div class="comtainer", align="center">
  <table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Body</th>
      <th>Article</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.username %></td>
        <td><%= comment.body %></td>
        <td><%= comment.article.title %></td>
        <td><%= link_to 'Show', article_comment_path(comment.article_id, comment.id), class: "btn btn-xs btn-success" %></td>
        <td><%= link_to "Edit this Comment", edit_article_comment_path(comment.article_id, comment.id), class: "btn btn-xs btn-primary" %></td>
        <td><%= link_to "Delete this Comment", article_comment_path(comment.article_id, comment.id), 
                method: :delete, data: {confirm: "Are you sure you want to delete the comment?"}, 
                class: "btn btn-xs btn-danger" %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
</div>
<div align="center">
  <%= will_paginate %>
</div>

<br>
