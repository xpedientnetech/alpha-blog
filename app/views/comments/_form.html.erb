<%= render 'shared/errors', obj: @comment %>

<%= form_for(@comment, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :comment %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :comment, class: "form-control", placeholder: "Comment goes here", autofocus: true %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
  </div>